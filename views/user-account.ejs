<!DOCTYPE html>
<html>

<%- include('head'); %>

<body>
  <%- include('navbar', { user: currentUser }); %>

  <div class="w-100 row mt-5">
    <div class="col-6 d-flex flex-column align-items-start px-5 font-poppins">

      <% if (currentUser && user.id === currentUser.id) { %>
      <h3>Your Account</h3>
      <% } else { %>
      <h3><%= user.username.charAt(0).toUpperCase() + user.username.slice(1) %>'s Account</h3>
      <% } %>

      <img src="/<%= user.image %>" class="img-fluid my-4" style="height: 13rem; object-fit: cover;" alt="user">

      <div class="w-50 d-flex flex-wrap justify-content-between my-1">
        <h6 class="text-primary">Email Address:</h6>
        <p><%= user.email %></p>
      </div>

      <% if (currentUser && user.id === currentUser.id) { %>
      <div class="d-flex">
        <a href="/product/" class="btn btn-primary font-weight-bold" role="button">Post A Product</a>
        <a href="#" class="btn btn-light text-dark ml-4 font-weight-bold" role="button">Edit Info</a>
      </div>
      <% } %>

    </div>
    <div class="col-6 d-flex flex-column align-items-start px-5 font-poppins">
      <% if (currentUser && user.id === currentUser.id) { %>
      <h4>Your products</h4>
      <% } else { %>
      <h4><%= user.username.charAt(0).toUpperCase() + user.username.slice(1) %>'s products</h4>
      <% } %>

      <% if (products.length !== 0) { %>
      <% products.forEach(function(product){ %>
      <%- include('product-card', {product: product}); %>
      <% }); %>
      <% } else { %>
      <img src="/images/empty.svg" class="img-fluid my-5" style="height: 13rem; object-fit: cover;" alt="no products">
      <h5>No Products Yet.</h5>
      <% } %>

    </div>
  </div>

  <%- include('scripts', {page: 'index'}); %>

</body>

</html>