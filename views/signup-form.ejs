<!DOCTYPE html>
<html>

<%- include('head'); %>

<body>

  <%- include('navbar', { user: 'inSignupPage' }); %>

  <div class="w-100 row justify-content-center align-items-center m-0 my-5">
    <div class="col-xl-4 col-lg-6 col-md-7 col-sm-9 col-12 mt-3">

      <div class="card p-sm-3 font-poppins bg-light border-primary">
        <div class="card-body">
          <h5 class="card-title">Signup</h5>
          <h6 class="card-subtitle mb-4 text-muted font-open-sans">Please enter your information</h6>

          <form method="post" action="/users/signup" autocomplete='off' class="needs-validation" novalidate>
            <div class="form-group">
              <label for="username">Username</label>
              <input type="text" class="form-control" name='username' id='username' minlength="3" required>
              <div class="invalid-feedback">
                The username must be at least 3 characters.
              </div>
            </div>

            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" id="email" name="email" required>
              <div class="invalid-feedback">
                Please enter a valid email (example@email.com).
              </div>
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name='password' id='password' minlength="5" required>
              <div class="invalid-feedback">
                The password must be at least 5 characters.
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Signup</button>
          </form>

          <p class="font-open-sans mt-4">Already have an account? <a href="/login" class="card-link">Login</a></p>
        </div>
      </div>

    </div>
  </div>

  <%- include('scripts', { page: 'form' }); %>

</body>

</html>