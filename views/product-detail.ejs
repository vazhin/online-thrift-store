<!DOCTYPE html>
<html>

<%- include('head'); %>

<body>
  <%- include('navbar', { user: user }); %>

  <div class="row w-100 justify-content-center m-0 mt-5 mb-3 align-items-center">
    <div class="col-md-10 col-11 d-flex flex-column">
      <div class="row">

        <div class="col-xl-6 col-12">
          <h2 class="m-0 text-dark"><%= product.name.charAt(0).toUpperCase() + product.name.slice(1) %></h2>
          <h5 class="mt-3 mb-2 text-primary">Description</h5>
          <p class="font-open-sans"><%= product.description %></p>

          <div class="border border-primary bg-light rounded mt-3 px-sm-5 p-4 py-2">
            <div class="d-flex flex-sm-row flex-column mt-2">
              <h6 class="text-primary m-0">City:</h6>
              <p class="font-open-sans m-0 ml-sm-2"><%= product.city %></p>
            </div>
            <div class="d-flex flex-sm-row flex-column mt-2">
              <h6 class="text-primary m-0">Condition:</h6>
              <p class="font-open-sans m-0 ml-sm-2"><%= product.condition %></p>
            </div>
            <div class="d-flex flex-sm-row flex-column mt-2">
              <h6 class="text-primary m-0">Ownerâ€™s Phone Number:</h6>
              <p class="font-open-sans m-0 ml-sm-2"><%= product.phoneNumber %></p>
            </div>
            <div class="d-flex flex-sm-row flex-column mt-2">
              <h6 class="text-primary m-0">Category:</h6>
              <p class="font-open-sans m-0 ml-sm-2"><%= product.category %></p>
            </div>
            <div class="d-flex flex-sm-row flex-column mt-2">
              <h6 class="text-primary m-0">Date Posted:</h6>
              <p class="font-open-sans m-0 ml-sm-2"><%= new Date(product.createdAt).toDateString() %></p>
            </div>

            <a class="text-reset text-decoration-none mt-2" href="/users/<%= product.user.userId %>">
              <div class="d-inline-flex flex-column mt-2">
                <h6 class="text-primary m-0 mb-2">Posted By:</h6>
                <img src="/<%= product.user.userImage %>" class="img-fluid rounded my-1"
                  style="height: 4rem; width: 4rem; object-fit: cover;" alt="user">
                <p class="m-0"><%= product.user.username %></p>
              </div>
            </a>

            <div class="d-flex flex-column mt-2">
              <h3 class="card-title m-0"><%= format(product.price, product.currency) %></h3>
              <h6 class="card-subtitle text-muted m-0">price</h6>
            </div>

          </div>
        </div>

        <div class="col-xl-6 col-12 d-flex justify-content-center p-3">
          <img src="/<%= product.image %>" class="img-fluid rounded w-100 h-auto"
            style="object-fit: cover; max-height: 500px;" alt="product">
        </div>

      </div>
    </div>
  </div>



  <% function format(price, currencyCode){
    const formatter = new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: currencyCode === 'USD' ? 'USD' : 'IQD',
  })
  
  return formatter.format(price)
  } %>

  <%- include('scripts', {page: 'product-detail'}); %>

</body>

</html>