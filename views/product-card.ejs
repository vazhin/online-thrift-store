<div class="card h-100 m-sm-2" style="width: 17.5rem;">
  <img src="/<%= product.image %>" class="card-img-top" style="height: 14rem; object-fit: cover;" alt="product">
  <div class="card-body d-flex flex-column justify-content-between font-poppins p-3">

    <h6 class="card-title m-0 mb-2 mb-sm-0 mt-2"><%= product.name %></h6>
    <p class="card-subtitle text-muted font-open-sans m-0 mb-3 mb-sm-0">
      <%= product.description.length <= 60 ? product.description : product.description.slice(0, 60) + '...' %></p>

    <div class="d-flex flex-column align-items-start justify-content-between">
      <div class="d-flex flex-column">
        <h5 class="m-0"><%= format(product.price, product.currency) %></h5>
        <p class="card-subtitle m-0 mb-2 text-muted"><%= product.condition %></p>
      </div>

      <a href="/products/<%= product.productId %>" class="btn btn-primary" role="button">Product
        Detail</a>

    </div>

  </div>
</div>

<% function format(price, currencyCode){
  const formatter = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: currencyCode === 'USD' ? 'USD' : 'IQD',
})

return formatter.format(price)
} %>